.pause-overlay {
    flex-grow: 1;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.78);
    display: none;
    justify-content: center;
    align-items: center;
}

#Controls {
    width: 50%;
    height: 80%;
    position: absolute;
    justify-content: center;
    align-items: center;
    transition: translate 0.5s;
}
